<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_fragmen_backgroundimg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="135dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cardview_img1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <EditText
                    android:id="@+id/edit_local_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="name"
                    android:drawableStart="@drawable/home_va_16"
                    android:gravity="center_vertical"
                    android:hint="Nombre:"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edit_local_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="postalAddress"
                    android:drawableStart="@drawable/baseline_location_on_24"
                    android:gravity="center_vertical"
                    android:hint="Dirección:"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edit_local_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="postalAddress"
                    android:drawableStart="@drawable/baseline_phone_24"
                    android:gravity="center_vertical"
                    android:hint="Teléfono:"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="3dp"
            android:text="Descripción:"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edit_local_description"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:gravity="start|top"
            android:maxLength="170"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/star1"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/baseline_star_outline_24" />

            <ImageButton
                android:id="@+id/star2"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/baseline_star_outline_24" />

            <ImageButton
                android:id="@+id/star3"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/baseline_star_outline_24" />

            <ImageButton
                android:id="@+id/star4"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/baseline_star_outline_24" />

            <ImageButton
                android:id="@+id/star5"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/baseline_star_outline_24" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <ImageButton
                android:id="@+id/positive_button"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginRight="48dp"
                android:layout_weight="0.75"
                android:background="@drawable/dialog_fragment_option_button"
                android:src="@drawable/add_va_white" />

            <ImageButton
                android:id="@+id/negative_button"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_weight="0.75"
                android:background="@drawable/dialog_fragment_option_button"
                android:src="@drawable/cancel_va_white" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
