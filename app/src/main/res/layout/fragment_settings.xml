<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.views.fragment.SettingsFragment">

    <ImageView
        android:id="@+id/settings_profile_img"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="64dp"
        android:background="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Santi"
        android:background="@drawable/settings_buttons"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_profile_img" />

    <TextView
        android:id="@+id/settings_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginBottom="444dp"
        android:background="@drawable/settings_buttons"
        android:padding="10dp"
        android:text="srodher115@g.educaand.es"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/baseline_email_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingg_name"
        app:layout_constraintVertical_bias="0.033" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/setting_admin_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/settings_buttons"
        android:paddingHorizontal="10dp"
        android:text="Admin"
        android:textColor="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_email"
        app:switchPadding="5dp"
        app:thumbTint="@color/orange" />

    <TextView
        android:id="@+id/setting_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/settings_buttons"
        android:drawableStart="@drawable/baseline_logout_24"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="Logout"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/setting_admin_btn"
        app:layout_constraintTop_toBottomOf="@+id/settings_email" />

</androidx.constraintlayout.widget.ConstraintLayout>